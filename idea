import React, { useState } from 'react';
import './navbar.css';

function Navbar() {
  const [isOpen, setIsOpen] = useState(false);

  return (
    <nav className="bg-gray-800 p-4">
      <div className="container mx-auto flex justify-between items-center">
        <div className="text-white text-lg font-bold">Crime Reporter</div>
        <div className="block lg:hidden">
          <button
            onClick={() => setIsOpen(!isOpen)}
            className="text-white focus:outline-none"
          >
            {isOpen ? '✖' : '☰'}
          </button>
        </div>
        <div
          className={`${
            isOpen ? 'slide-in' : 'slide-out'
          } lg:flex lg:items-center lg:w-auto w-full transition-all duration-500 ease-in-out fixed lg:relative top-0 left-0 lg:h-auto h-full bg-gray-800 lg:bg-transparent z-50 lg:z-auto`}
        >
          <div className="text-sm lg:flex-grow">
            <Link
              to="/"
              className="block mt-4 lg:inline-block lg:mt-0 text-blue-300 hover:text-blue-500 mr-4 transition duration-300 ease-in-out transform hover:scale-105 z-20"
              onClick={() => setIsOpen(false)}
            >
              Crime Data
            </Link>
            <Link
              to="/report"
              className="block mt-4 lg:inline-block lg:mt-0 text-blue-300 hover:text-blue-500 mr-4 transition duration-300 ease-in-out transform hover:scale-105"
              onClick={() => setIsOpen(false)}
            >
              Report
            </Link>
            <Link
              to="/trends"
              className="block mt-4 lg:inline-block lg:mt-0 text-blue-300 hover:text-blue-500 transition duration-300 ease-in-out transform hover:scale-105"
              onClick={() => setIsOpen(false)}
            >
              Crime Trends
            </Link>
          </div>
        </div>
      </div>
    </nav>
  );
}

export default Navbar;




